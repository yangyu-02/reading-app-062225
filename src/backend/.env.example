# Reading App Environment Variables

# Application
APP_NAME="Reading App"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"

# Database
DATABASE_URL="postgresql+asyncpg://reading_user:reading_password@localhost:5432/reading_app"

# Redis
REDIS_URL="redis://localhost:6379"

# Authentication & Security
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_MINUTES=10080

# Password hashing
PASSWORD_SALT_ROUNDS=12

# API Configuration
API_V1_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# File Upload (S3 - for later)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""

# OpenAI/Anthropic (for chat - later)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Development Tools
LOG_LEVEL="DEBUG"
